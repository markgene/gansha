/*
 * -------------------------------------------------
 *  nf-core/gansha Nextflow config file for SJ LSF
 * -------------------------------------------------
 * Default config options for St Jude LSF.
 */

 // Load config for SJ LSF

process {
    executor = 'lsf'

    cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    memory = { check_max( 2.5.GB * task.attempt, 'memory' ) }
    time = { check_max( 48.h * task.attempt, 'time' ) }
    queue = "standard"
    // queue = "priority"
    clusterOptions = "-P ATAC"

    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries = 1
    maxErrors = '-1'

    // Process-specific resource requirements
    withName:FastQC {
        cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    }
    withName:TrimGalore {
        cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    }
    withLabel:multiqc {
        cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    }
    withName:Bowtie2Align {
        cpus = { check_max( 10 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
    withName:SortBAM {
        cpus = { check_max( 10 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
    withName:AtacBamEncodeFilterRound1 {
        cpus = { check_max( 10 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
    withName:SamtoolsFixmate {
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
    withName:RemoveOrphan {
        cpus = { check_max( 8 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
    withLabel:picard {
        cpus = { check_max( 1 * task.attempt, 'cpus' ) }
        memory = { check_max( 5.GB * task.attempt, 'memory' ) }
        queue = "standard"
        clusterOptions = "-R \"rusage[mem=5000]\""
    }
    withName:AtacBamEncodeFilterRound2 {
        cpus = { check_max( 10 * task.attempt, 'cpus' ) }
        queue = "standard"
    }
}

params {
  // Max resources
  max_cpus = 300
  max_memory = 48.GB
  max_time = 600.h

  // Picard memory
  picard_mem = 5
}