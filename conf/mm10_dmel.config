/*
 * ----------------------------------------------------
 *  nf-core/gansha Nextflow config file for mm10 genome
 * ----------------------------------------------------
 * Default config options for mm10 + Drosophila melanogaster Ensembl r97.
 */

 params {
    config_profile_name = 'Mouse genome GRCm38/mm10 + Drosophila melanogaster Ensembl r97'
    config_profile_description = "Mouse genome GRCm38/mm10 + Drosophila melanogaster Ensembl r97"
    ref_base = '/home/jchen4/shared/Mus_musculus/Gencode/M22_dmel/'

    // Genome references
    fasta         = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome.fa"
    gtf           = "${ref_base}/gencode.vM22.primary_assembly.annotation.gtf"
    bowtie2_index = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome"
    bwa_index     = "${ref_base}/bwa/0.7.17-r1188/GRCm38.primary_assembly.genome.fa"
    chrom_sizes   = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome.fa.sizes"
    
    fasta         = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome.dmel.fa"
    gtf           = "${ref_base}/gencode.vM22.primary_assembly.annotation.gtf"
    bowtie2_index = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome.dmel"
    chrom_sizes   = "${ref_base}/bowtie2/v2.4.1/GRCm38.primary_assembly.genome.dmel.fa.sizes"
    chrom_list    = "${ref_base}/bowtie2/v2.4.1/mouse_chr.list"
    spikein_chrom_list = "${ref_base}/bowtie2/v2.4.1/dmel_chr.list"
    mito_name = "chrM"
    // Blacklist from https://github.com/Boyle-Lab/Blacklist/blob/master/lists/mm10-blacklist.v2.bed.gz
    blacklist = "${baseDir}/assets/blacklists/GRCm38-blacklist_encode_mm10_v2.bed"
    // Required by peak-calling steps
    macs_gsize  = 1.87e9
}